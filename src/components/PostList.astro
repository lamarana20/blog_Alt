---
import type { CollectionEntry } from "astro:content";
import Post from "./Post.astro";

type Props = {
    posts: CollectionEntry<"posts">[];
};

const { posts } = Astro.props;
---

<div class="grid grid-cols-3 gap-x-16 gap-y-16 max:md:grid-cols-1 mb-24 mt-12 sm:grid-cols-2">
    {
        posts.map((post) => (
            <Post post={post} />
        ))
    }
</div>
